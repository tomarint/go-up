{
<% if (browser === 'firefox') { -%>
  "manifest_version": 2,
<% } else { -%>
  "manifest_version": 3,
<% } -%>

  "name": "__MSG_strExtensionName__",
  "version": "<%= version %>",

<% if (browser === 'firefox') { -%>
  "browser_specific_settings": {
    "gecko": {
      "id": "{edc9b84e-a8d5-4908-bd1d-8b98d40e2bfa}"
    }
  },
<% } -%>

  "permissions": [
    "activeTab"
  ],

<% if (browser === 'firefox') { -%>
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "__MSG_strExtensionName__"
  },
<% } else { -%>
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "__MSG_strExtensionName__"
  },
<% } -%>

  "default_locale": "en",
  "description": "__MSG_strExtensionDescription__",
  "icons": {
    "16": "images/icon16.png",
    "24": "images/icon24.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}